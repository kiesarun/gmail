.body-page
    height 100vh

.page-header
    height 64px
    padding 8px
    display flex

.home-menu
    padding-right 30px
    min-width 238px
    width 256px
    display flex
    justify-content flex-start
    vertical-align middle

.menu-icon 
    padding 12px
    width 48px
    margin 0px 4px
    color #5f6368
    cursor pointer

.mail-pic 
    vertical-align middle
    align-self center
    height 40px
    img 
        margin-bottom 4px
        cursor pointer

.search-bar
    padding 0px 5px
    align-self center
    width calc((100% - 256px) / 2)
    display flex
    background-color #f1f3f4
    border-radius 8px
    .search-icon
        width 40px
        height 40px
        padding 8px
        margin 3px
        cursor pointer
    input
        height 48px
        width calc(100% - 40px)
        background-color #f1f3f4
        border 1px solid transparent


.tool-menu 
    color #5f6368
    width calc((100% - 256px) / 2)
    display flex
    justify-content space-between
    vertical-align middle
    a 
        width 40px
        height 40px
        margin 2px 
        padding 8px

.tool-icon 
    cursor pointer
    height 24px
    width 24px 
    align-self center

.profile-box
    display flex
    border 1px solid #dadce0
    border-radius 8px
    max-height 48px
    width 134px
    cursor pointer
    justify-content space-between
    margin-right 4px

.profile-pic
    max-height 32px
    width 78px
    align-self center
    img 
        width 100%
        height 100%
        margin-left 7px

.profile-icon 
    align-self center
    padding 4px
    .circle-icon
        background-color yellow 
        width 32px
        height 32px
        vertical-align middle
        border-radius 50%
        text-align center
        color #fff
        .text
            align-self center
            height 100%
            font-size 24px

.page-body
    display flex
    padding 8px

.menu-bar
    width 256px

.compose-bar
    height 48px
    margin 16px 0px
    padding-right 8px
    background-color yellow

.compose-btn
    padding 8px
    display flex
    padding-right 24px
    width fit-content
    border-radius 30px
    text-align center
    box-shadow 0 1px 2px 0 rgba(60,64,67,0.302), 0 1px 3px 1px rgba(60,64,67,0.149)
    img 
        margin-right 10px
    .compose-text
        margin 0px
        font-weight 600
        color #3C4043

#wrapper
    overflow-x hidden
    margin-top 10px
    &.toggled
        #sidebar-wrapper
            margin-left 0

#sidebar-wrapper
    background-color #fff !important
    border none !important
    .sidebar-heading
        height 80px
        padding 25px 20px
        font-size 1.2rem
        margin-bottom 7px
        color #c3544d
        border-bottom 1px solid #eaebeb
    .list-group
        width 15rem
        a
            display flex

.overflow-scroll
    height 100vh
    overflow scroll

.bg-light
    a
        background-color #fff !important
        border none
        display flex

.margin-right
    margin-right 15px

.page-content
    width calc(100% - 256px)